{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "newLine": "LF",
        "sourceMap": false,
        "declaration": true,
        "lib": [
            "es5",
            "es2015.promise",
            "dom",
            "scripthost"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
